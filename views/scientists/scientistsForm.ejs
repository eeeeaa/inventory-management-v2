<!DOCTYPE html>
<html lang="en">
  <%- include("../common/header") %>
  <body>
    <%- include("../common/navbar") %>
    <h1><%=title%></h1>
    <%- include("../common/errors") %>
    <form <%if(scientist) {%>
      action="/scientists/<%=scientist.id%>" method="post" <%} else {%>
      action="/scientists" method="post"> <% } %>
      <label for="name">Name</label>
      <% if(scientist) { %>
      <input
        type="text"
        name="name"
        id="name"
        value="<%=
          scientist.name%>"
        required
      />
      <%} else { %>
      <input type="text" name="name" id="name" required />
      <%}%>

      <label for="department">Department</label>
      <% if(scientist) { %>
      <input
        type="text"
        name="department"
        id="department"
        value="<%=scientist.department%>"
        required
      />
      <%} else { %>
      <input type="text" name="department" id="department" required />
      <%}%>

      <button type="submit">
        <%if(scientist) {%> Update <%} else {%> Create <%}%>
      </button>
    </form>
  </body>
</html>
